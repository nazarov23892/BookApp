
@using BookApp.BLL.Services.BookManage
@model BookDescriptionForEditDto

@{
    ViewBag.Title = "Edit Description";
}
<h2>Edit Description</h2>
<br />
<h4>@Model.BookTitle</h4>
<br />
<form method="post" asp-action="EditDescription">
    <input asp-for="BookId" hidden/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="12" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" 
                class="btn btn-primary">save</button>
        <a asp-action="Details"
           asp-controller="Home"
           asp-area="contentmanager"
           asp-route-id="@Model.BookId"
           class="btn btn-secondary">cancel</a>
    </div>
</form>