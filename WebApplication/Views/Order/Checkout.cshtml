
@using ServiceLayer.CartServices
@using ServiceLayer.OrderServices

@model PlaceOrderDto

<h2>Check out</h2>
<div class="row">
    <div class="col-md-8">
        <hr />
        <h4>Details</h4>
        <form id="form_submit" method="post" asp-action="PlaceOrder" asp-controller="Orders">
            <div class="form-group">
                <label asp-for="Firstname"></label>
                <input asp-for="Firstname" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Lastname"></label>
                <input asp-for="Lastname" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
        </form>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <h4>Items</h4>
        <table class="table">
            <tr>
                <th>title</th>
                <th>price</th>
                <th>quantity</th>
            </tr>
            @foreach (var line in Model.Lines)
            {
                <tr>
                    <td>@line.Title</td>
                    <td>@line.Price</td>
                    <td>@line.Quantity</td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="text-center">
    <button form="form_submit"
            type="submit"
            class="btn btn-primary">
        Place order
    </button>
    <a asp-action="Index"
       asp-controller="Cart"
       class="btn btn-secondary">
        cancel
    </a>
</div>
