
@using WebApplication.Infrastructure

@{
    PageAlertMessage message = TempData.ReadObject<PageAlertMessage>(key: "message");
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggler navbar-light bg-white border-bottom shadow mb-3">
        <div class="container">
            <a class="navbar-brand"
               asp-action="Index"
               asp-controller="Home">
                BookApp
            </a>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target=".navbar-collapse" a
                    ria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-action="Index"
                           asp-controller="Cart"
                           title="Your cart">
                            Cart
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-action="Manage"
                           asp-controller="Account"
                           title="Manage">
                            username
                        </a>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline"
                              asp-action="LogOut"
                              asp-controller="Account"
                              asp-route-returnUrl=""
                              method="post">
                            <button type="submit"
                                    class="nav-link btn btn-link text-dark">
                                Logout
                            </button>
                        </form>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-action="Index"
                           asp-controller="Home">
                            Home
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @if (message != null)
    {
        string alertClass = GetAllertClassnameByMessageType(message.MessageType);
        <div class="alert @alertClass">@message.Text</div>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>

@functions{
    public string GetAllertClassnameByMessageType(TempdataMessageType messageType)
    {
        string className = "alert-secondary";
        switch (messageType)
        {
            case TempdataMessageType.Default:
                className = "alert-secondary";
                break;
            case TempdataMessageType.Success:
                className = "alert-success";
                break;
            case TempdataMessageType.Danger:
                className = "alert-danger";
                break;
            default:
                // empty
                break;
        }
        return className;
    }
}