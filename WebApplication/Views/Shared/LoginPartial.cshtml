
@{
    bool isAuthN = User.Identity.IsAuthenticated;
    string userName = isAuthN
        ? User.Identity.Name
        : "Guest";
}

<ul class="navbar-nav">
    @if (isAuthN)
    {
        <li class="nav-item">
            <div class="nav-link text-dark">@userName</div>
        </li>
        <li class="nav-item">
            <form method="post"
                  asp-action="LogOut"
                  asp-controller="Account"
                  class="form-inline">
                <button type="submit"
                        class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <div class="nav-link text-dark">@userName</div>
        </li>
        <li class="nav-item">
            <a asp-action="Login"
               asp-controller="Account"
               class="nav-link text-dark">
                Login
            </a>
        </li>
    }
</ul>