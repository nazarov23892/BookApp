
@using ServiceLayer.CartServices
@model IEnumerable<CartLine>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
    </tr>
    @{
        decimal total = 0.0M;
    }
    @foreach (var line in Model ?? Enumerable.Empty<CartLine>())
    {
        decimal subtotal = line.Book.Price * line.Quantity;
        total += subtotal;

        @(await Html.PartialAsync(
            partialViewName: "LinePartial",
            model: line))
    }
    <tr>
        <th colspan="3">Total</th>
        <th>@total</th>
    </tr>
</table>
<div>
    <a asp-action="Index"
       asp-controller="Home"
       class="btn btn-secondary">
        back to catalog
    </a>
</div>