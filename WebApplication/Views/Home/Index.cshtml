
@model BookListCombinedDto

<table>
    <tr>
        <th>book-title</th>
        <th>book-price</th>
    </tr>
    @foreach (var book in Model.Books ?? Enumerable.Empty<DataLayer.Entities.Book>())
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Price</td>
        </tr>
    }
</table>
<div>
    @for (int i = 1; i <= Model.PageOptionsOut.PageCount; i++)
    {
        if (i > 1)
        {
            <text>|</text>
        }
        <a asp-action="Index"
           asp-controller="Home"
           asp-route-page="@i"
           asp-route-pageSize="@Model.PageOptionsOut.PageSize">
            @i
        </a>
    }
</div>